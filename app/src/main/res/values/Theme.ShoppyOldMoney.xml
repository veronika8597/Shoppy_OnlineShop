<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ShoppyOldMoney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- App background -->
        <item name="android:windowBackground">@color/lavender_gray</item>
        <item name="colorSurface">@color/lavender_gray</item>

        <!-- Status bar and top bar -->
        <item name="android:statusBarColor">@color/navy_blue</item>
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="android:windowLightStatusBar">false</item> <!-- White text/icons -->

        <!-- Default font and text -->
        <item name="android:textColorPrimary">@color/Black_russian</item>
        <item name="android:fontFamily">@font/fredoka</item>

        <!-- Custom component styles -->
        <item name="materialButtonStyle">@style/Widget.ShoppyOldMoney.Button</item>
        <item name="checkboxStyle">@style/Widget.ShoppyOldMoney.Checkbox</item>

        <!-- Edit text -->
        <item name="colorControlActivated">@color/navy_blue</item> <!-- Focus underline & icons -->
        <item name="colorAccent">@color/navy_blue</item> <!-- Older devices -->
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item> <!-- Cursor -->

    </style>
</resources>
