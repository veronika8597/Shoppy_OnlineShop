<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.ShoppyOldMoney.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/text_on_dark</item> <!-- White -->
        <item name="android:fontFamily">@font/fredoka</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.ShoppyOldMoney.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/checkbox_tint</item>
        <item name="android:fontFamily">@font/fredoka</item>
    </style>

    <style name="RoundedImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="BottomSheetDialogRounded" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>




</resources>
