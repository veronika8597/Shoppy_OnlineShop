<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
            <shape>
                <solid android:color="@color/button_pressed"/> <!-- Black Russian -->
                <corners android:radius="13dp"/>
            </shape>
        </item>
        <item>
            <shape>
                <solid android:color="@color/button_normal"/> <!-- Dark Slate Blue -->
                <corners android:radius="13dp"/>
            </shape>
        </item>
</selector>

