<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the tag -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#19A7E9" /> <!-- Set your desired background color here -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</layer-list>
